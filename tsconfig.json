{
  "compilerOptions": {
    "target": "es2019",
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "./built",
  },
  "include": ["./lib/**/*"],
  "exclude": ["node_modules", "built", "test"],
  "ts-node": {
    "experimentalResolver": true
  }
}
